<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_qr_scanner">

    <fragment
        android:id="@+id/navigation_qr_scanner"
        android:name="com.example.eventease.ui.QRScanner.QRScannerFragment"
        android:label="@string/title_qr_scanner"
        tools:layout="@layout/fragment_qr_scanner" />

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.example.eventease.ui.event.EventFragment"
        android:label="@string/title_event"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.eventease.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>