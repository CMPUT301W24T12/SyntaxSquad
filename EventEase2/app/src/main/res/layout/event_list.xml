<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="408dp"
        android:layout_height="248dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#E9EDF1"
        android:scaleX="0.95"
        android:scaleY="0.95" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:translationX="-375dp"
        android:translationY="15dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:textSize="14sp"
        android:textStyle="italic"
        android:translationX="-695dp"
        android:translationY="40dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:text="ENTRIES"
        android:translationX="-875dp"
        android:translationY="75dp"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/participant_count"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationX="-950dp"
        android:translationY="100dp"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="131dp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button" />


    <Button
        android:id="@+id/event_details"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:background="@drawable/rounded_button_background"
        android:text="EVENT DETAILS"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:translationX="-1160dp"
        android:translationY="170dp"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/view_attendees"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:text="VIEW ATTENDEES"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:translationX="-1145dp"
        android:translationY="170dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/see_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/see_more"
        android:visibility="gone" />


</LinearLayout>