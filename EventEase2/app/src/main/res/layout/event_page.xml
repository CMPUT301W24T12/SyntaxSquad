<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#00B6AA"
        android:gravity="center"
        android:text="EventEase"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_header"
        android:layout_width="409dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-thin"
        android:text="EVENTS"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="75dp"
        android:paddingLeft="12dp"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintEnd_toEndOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintTop_toTopOf="null" />

    <ListView
        android:id="@+id/event_list"
        android:layout_width="409dp"
        android:layout_height="531dp"
        android:layout_marginTop="124dp"
        android:layout_weight="1"
        android:translationY="125dp"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintEnd_toEndOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintTop_toTopOf="null">

    </ListView>

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="27dp"
        android:background="@android:color/transparent"
        android:onClick="onButtonClick"
        android:text="Back"
        android:textSize="16sp"
        android:translationY="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bot_header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#E8E8E8"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="72dp"
        android:layout_height="56dp"
        app:tint="#00B6AA"
        app:srcCompat="@drawable/ic_list"
        app:layout_constraintTop_toTopOf="null"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintEnd_toEndOf="null"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="667dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="61dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/ic_calender"
        app:layout_constraintTop_toTopOf="null"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintEnd_toEndOf="null"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="668dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="77dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="null"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintEnd_toEndOf="null"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="667dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:background="@android:color/transparent"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:srcCompat="@drawable/ic_cicle_plus"
        app:tint="#FFFFFF"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="null"
        app:layout_constraintBottom_toBottomOf="null"
        app:layout_constraintStart_toStartOf="null"
        app:layout_constraintEnd_toEndOf="null"/>

</androidx.constraintlayout.widget.ConstraintLayout>